<!DOCTYPE html>
<html>
  <head>
    <title><%= "JK Games - " + yield(:title) %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' %>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/810e488b40.js" crossorigin="anonymous"></script>

    <!-- jQuery -->
    <%= javascript_include_tag 'https://code.jquery.com/jquery-3.6.0.min.js', 'data-turbolinks-track': 'reload' %>

    <!-- Bootstrap JavaScript -->
    <%= javascript_include_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-secondary text-white">
    <%= render "shared/navbar" %>
    <%= render partial: 'shared/cart_display' %>
    <%= render "shared/search_bar" %>
    <%= yield %>
  </body>
</html>
