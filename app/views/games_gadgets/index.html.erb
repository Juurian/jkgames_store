<% content_for :title, "All Game Gadgets" %>
<div class="container-fluid games-container bg-dark">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card text-light">
        <div class="card-body">
          <h1 class="card-title text-dark">All Game Gadgets</h1>
          <div class="row row-cols-1 row-cols-md-4 g-4">
            <% @games_gadgets.each do |games_gadget| %>
              <div class="col">
                <div class="card bg-dark text-light">
                  <div class="card-body">
                    <h2 class="card-title"><%= games_gadget.title %></h2>

                    <!-- Display the first image corresponding to the games_gadget ID -->
                    <% if games_gadget.image.attached? %>
                        <%= image_tag rails_blob_path(games_gadget.image, only_path: true), class: 'img-fluid' %>
                    <% end %>

                    <p class="card-text">
                      Description: <%= games_gadget.description.presence || 'N/A' %> <br>
                      <br>
                      Price: $<%= number_to_currency(games_gadget.price) %>
                    </p>

                    <!-- Add other games_gadget details here -->
                  </div>
                </div>
              </div>
            <% end %>


          </div>
        </div>
      </div>
                  <!-- Pagination -->
                        <div class="mt-3 text-center">
              <%= paginate @games_gadgets, class: 'pagination justify-content-center' %>
            </div>
    </div>


  </div>
</div>


