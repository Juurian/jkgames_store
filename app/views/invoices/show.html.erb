<h1>Invoice</h1>

<div>
  <h2>Order Details</h2>
  <p>Order ID: <%= @order.id %></p>
  <!-- Display other order details as needed -->
</div>

<div>
  <h2>Items</h2>
  <ul>
    <% @order.items.each do |item| %>
      <li>
        <%= item.product_name %> - Quantity: <%= item.quantity %> - Price: <%= item.price %>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <h2>Total Amount</h2>
  <p>Grand Total: <%= @order.total_amount %></p>
  <!-- Display other total amounts such as taxes, discounts, etc. -->
</div>
